# ---- FreshRSS core ----
TZ=Asia/Shanghai
CRON_MIN=*/30 # in minutes

# ---- FreshRSS data (for rss-sync) ----
FRESHRSS_DATA_DIR=/app/data
# Optional override. If empty/unset, rss-sync will auto-detect when only one db exists under /app/data/users/*/db.sqlite.
FRESHRSS_SQLITE_PATH=/app/data/users/kai/db.sqlite

# ---- SiliconFlow / embeddings / reranking ----
SILICONFLOW_API_KEY=
SILICONFLOW_BASE_URL=https://api.siliconflow.cn/v1
EMBEDDING_MODEL=Qwen/Qwen3-Embedding-8B
EMBEDDING_DIM=4096
RERANK_MODEL=Qwen/Qwen3-Reranker-8B

# ---- RSS search tuning ----
CHUNK_SIZE=256
CHUNK_OVERLAP=64
# Vector search coarse filter (smaller distance = more similar).
# If you enable rerank, consider setting this higher to avoid filtering out good candidates too early.
SEARCH_THRESHOLD=1.3
SEARCH_CANDIDATE_MULTIPLIER=10
RERANK_ENABLED=1
CHECK_INTERVAL=720
RETENTION_DAYS=30
LANCEDB_URI=/app/lancedb_data/freshrss
EMBEDDING_BATCH_SIZE=50
# How many FreshRSS entries to process per LanceDB delete+add batch (trade off speed vs. memory).
SYNC_ENTRY_BATCH_SIZE=20
SYNC_CATEGORIES=macro,for_content_domain,news
PYTHONUNBUFFERED=1

# ---- WeChat2RSS ----
LIC_EMAIL=
LIC_CODE=
RSS_HOST=wechat2rss:8080
RSS_PROXY_DISABLE_IMG=1

# ---- RSSHub ----
ZSXQ_ACCESS_TOKEN=
SEEKINGALPHA_COOKIE=
# Route cache TTL in seconds (default 300 = 5 minutes)
CACHE_EXPIRE=3600
