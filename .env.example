# ---- FreshRSS core ----
TZ=Asia/Shanghai
CRON_MIN=*/30

# ---- FreshRSS data (for rss-sync) ----
FRESHRSS_DATA_DIR=/app/data
# Optional override. If empty/unset, rss-sync will auto-detect when only one db exists under /app/data/users/*/db.sqlite.
FRESHRSS_SQLITE_PATH=

# ---- SiliconFlow / embeddings ----
SILICONFLOW_API_KEY=your_siliconflow_api_key_here
SILICONFLOW_BASE_URL=https://api.siliconflow.cn/v1
EMBEDDING_MODEL=Qwen/Qwen3-Embedding-8B
EMBEDDING_DIM=4096

# ---- RSS search tuning ----
CHUNK_SIZE=256
CHUNK_OVERLAP=64
# Vector search coarse filter (smaller distance = more similar).
# If you enable rerank, consider setting this higher to avoid filtering out good candidates too early.
SEARCH_THRESHOLD=1
SEARCH_CANDIDATE_MULTIPLIER=20
SEARCH_CANDIDATE_CAP=200
RERANK_ENABLED=0
RERANK_MODEL=BAAI/bge-reranker-v2-m3
RERANK_CANDIDATES=200
RERANK_TIMEOUT_SECONDS=15
RERANK_MAX_DOC_CHARS=2000
CHECK_INTERVAL=720
RETENTION_DAYS=30
LANCEDB_URI=/app/lancedb_data/freshrss
EMBEDDING_BATCH_SIZE=50
SYNC_CATEGORIES=macro
PYTHONUNBUFFERED=1

# ---- WeChat2RSS ----
LIC_EMAIL=your_email@example.com
LIC_CODE=your_license_code_here
RSS_HOST=wechat2rss:8080
RSS_PROXY_DISABLE_IMG=1

# ---- RSSHub ----
ZSXQ_ACCESS_TOKEN=your_zsxq_access_token_here
SEEKINGALPHA_COOKIE=your_seekingalpha_premium_cookie_here
# Route cache TTL in seconds (default 300 = 5 minutes)
CACHE_EXPIRE=21600
